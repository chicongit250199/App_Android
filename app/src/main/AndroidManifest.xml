<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="antbuddy.htk.com.antbuddy2016">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash screen -->
        <activity
            android:name="antbuddy.htk.com.antbuddy2016.module.login.activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme ="@style/WelcomeTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="antbuddy.htk.com.antbuddy2016.module.login.activities.WalkThroughActivity"
            android:label="@string/app_name"
            android:theme ="@style/WelcomeTheme">
        </activity>

        <activity
            android:name="antbuddy.htk.com.antbuddy2016.module.login.activities.LoReActivity"
            android:label="@string/app_name"
            android:theme ="@style/WelcomeTheme">
        </activity>

        <activity
            android:name="antbuddy.htk.com.antbuddy2016.module.login.activities.CreateAccountActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="antbuddy.htk.com.antbuddy2016.module.login.activities.LoginActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="antbuddy.htk.com.antbuddy2016.module.login.activities.ForgotPasswordActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="antbuddy.htk.com.antbuddy2016.module.login.activities.DomainActivity"
            android:label="@string/app_name" >
        </activity>

    </application>
</manifest>
