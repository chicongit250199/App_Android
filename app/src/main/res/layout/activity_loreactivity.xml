<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/walkthough_background"
    android:weightSum="1">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView14"
        android:layout_gravity="center"
        android:background="@drawable/logo"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="AntBuddy"
        android:id="@+id/textView4"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_weight="0.17">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/imageView15"
            android:layout_centerInParent="true"
            android:background="@drawable/check_mark2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A refeshing approach to"
            android:id="@+id/textView12"
            android:layout_alignTop="@+id/imageView15"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" TEAM COMMUNICATION"
            android:id="@+id/textView13"
            android:layout_alignBottom="@+id/imageView15"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="25dp"
            android:paddingBottom="10dp" />


    </RelativeLayout>



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login_LoRe_Button"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgroundbutton2"
        android:textColor="@color/white_ab"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create new account"
        android:id="@+id/createNewAccount_LoRe_Button"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backgroundbutton1"
        android:layout_marginTop="10dp"
        android:textColor="@color/walkthough_background"/>
</LinearLayout>