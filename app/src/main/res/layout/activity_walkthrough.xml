<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_green"
        android:focusableInTouchMode="false" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:id="@+id/radiogroup"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">

        <RadioButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/radioButton"
            android:checked="true"
            android:background="@drawable/radiobutton_selector"
            android:button="@null"
            android:layout_margin="5dp" />

        <RadioButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/radioButton2"
            android:background="@drawable/radiobutton_selector"
            android:button="@null"
            android:layout_margin="5dp" />

        <RadioButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/radioButton3"
            android:background="@drawable/radiobutton_selector"
            android:button="@null"
            android:layout_margin="5dp" />

        <RadioButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/radioButton4"
            android:background="@drawable/radiobutton_selector"
            android:button="@null"
            android:layout_margin="5dp" />
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_free"
            android:id="@+id/signUpFree_Button"
            android:layout_gravity="right|bottom"
            android:background="@drawable/backgroundbutton1"
            android:textColor="@color/walkthough_background"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/login_Button"
            android:layout_gravity="left|bottom"
            android:background="@drawable/backgroundbutton2"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white_ab"/>
    </LinearLayout>


</RelativeLayout>
